pipeline {
    agent any

    stages {
        stage('Springboot build') {
            steps {
                dir('KB/MSA/account-service'){
                    sh '''
                    pwd
                    echo 'springboot build'

                    #!/bin/bash

                    # Source and destination directories
                    SRC_DIR="/var/jenkins_home/backend-config/kb-msa/account-service"
                    DEST_DIR="/var/jenkins_home/workspace/kb_msa_account_service/KB/MSA/account-service/src/main/resources"

                    # File to copy
                    FILE="application.yml"

                    # Check if destination directory exists, if not create it
                    if [ ! -d "$DEST_DIR" ]; then
                        mkdir -p "$DEST_DIR"
                    fi

                    # Copy the file
                    cp "$SRC_DIR/$FILE" "$DEST_DIR/$FILE"

                    chmod +x gradlew
                    ./gradlew clean build
                    '''
                }
            }
            post {
                success {
                    sh 'echo "Successfully "'
                }
                failure {
                    sh 'echo "Fail"'
                }
            }
        }

        stage('Dockerimage build') {
            steps {
                dir('KB/MSA/account-service'){
                    sh '''
                    echo 'Dockerimage build'
                    docker build -t docker-springboot-kb-account-service:0.0.1 .
                    '''
                }
            }
            post {
                success {
                    sh 'echo "Successfully "'
                }
                failure {
                    sh 'echo "Fail"'
                }
            }
        }

        stage('Deploy') {
            steps {
                dir('KB/MSA/gateway-service'){
                    sh '''
                    echo 'Deploy'



                    docker run -d -p 9001:9001 --network ubuntu_kb --name kb-account-service docker-springboot-kb-account-service:0.0.1

                    '''
                }
            }
            post {
                success {
                    sh 'echo "Successfully "'
                }
                failure {
                    sh 'echo "Fail"'
                }
            }
        }
    }
}