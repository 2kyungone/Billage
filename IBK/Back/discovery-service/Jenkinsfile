pipeline {
    agent any

    stages {
        stage('Springboot build') {
            steps {
                dir('IBK/Back/discovery-service'){
                    sh '''
                    pwd
                    echo 'springboot build'
                    cp /var/jenkins_home/backend-config/ibk/discovery-service/application.yml /var/jenkins_home/workspace/ibk_eureka_server/IBK/Back/discovery-service/src/main/resources/
                    chmod +x gradlew
                    ./gradlew clean build
                    '''
                }
            }
            post {
                success {
                    sh 'echo "Successfully "'
                }
                failure {
                    sh 'echo "Fail"'
                }
            }
        }

        stage('Dockerimage build') {
            steps {
                dir('IBK/Back/discovery-service'){
                    sh '''
                    echo 'Dockerimage build'
                    docker build -t docker-springboot-ibk-discovery-service:0.0.1 .
                    '''
                }
            }
            post {
                success {
                    sh 'echo "Successfully "'
                }
                failure {
                    sh 'echo "Fail"'
                }
            }
        }

        stage('Deploy') {
            steps {
                dir('IBK/Back/discovery-service'){
                    sh '''
                    echo 'Deploy'

                    docker stop ibk-discover-service
                    docker rm ibk-discover-service

                    docker run -d -p 8761:8080 --network ubuntu_ibk --name ibk-discover-service docker-springboot-ibk-discovery-service:0.0.1

                    docker image prune
                    '''
                }
            }
            post {
                success {
                    sh 'echo "Successfully "'
                }
                failure {
                    sh 'echo "Fail"'
                }
            }
        }
    }
}